{
    "parser": "babel-eslint",
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
    },
    "extends": [
        "airbnb"
    ],
    "plugins": [
        "jest"
    ],
    "env": {
        "jest/globals": true
    }
}